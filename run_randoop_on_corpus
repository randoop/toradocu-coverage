#!/bin/bash
CORPUSDIR=toradocu
for dirname in $CORPUSDIR/*; do
  [ -d "$dirname" ] || continue

  basename=`basename $dirname`
  log="../logs/$basename-randoop-log.txt"

  if [[ -e "$dirname/build.gradle" ]]; then
    echo "running randoop on $basename"
    (cd $dirname; ./gradlew prepareForCoverage 2>&1 | tee $log)
  fi
done
